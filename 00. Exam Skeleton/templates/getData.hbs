<div class="container">
    {{> header}}
    <h1>Get Data from database!!</h1>

    <h1>Books</h1>
    <div>

        {{#if loggedIn}}
            {{#each books}}
            <div>
                <p>Title : {{title}}, Author: {{author}}, Isbn: {{isbn}}</p>
            </div>
            {{/each}}
        {{else}}
            <p>You are currently not logged in. <a href="#/login">Log in</a> and try again!</p>
        {{/if}}

    </div>


</div>
{{> footer}}